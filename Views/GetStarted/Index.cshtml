@using MvcSample.Web.Models
@model List<MacTool>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Get Started";
}
<p class="page-header">
    <h1>Leaving Yosemite Basecamp</h1>
</p>
<div class="container">
	
	@foreach(var tool in @Model)
	{
		<div class="row">
			<div class="col-md-8">
				<h4>@tool.Name</h4>
				<p>@Html.Raw(tool.Description)</p>
				<a href="@tool.Link" class="btn btn-primary">@tool.LinkText</a>
			</div>
		</div>
		<br/>
	}
	
		<div class="row">
			<div class="col-md-8">
				<h4>But Riiiicky!</h4>
				<h5>@Html.ActionLink("I wanna start the show!", "NewProject", "GetStarted", null, new { @class = "btn btn-primary" })</h5>
			</div>
		</div>
</div>